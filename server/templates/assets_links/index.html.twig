{% extends 'base.html.twig' %}

{% block title %}AssetsLink index{% endblock %}

{% block body %}
    <h1>AssetsLinks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assets_link in assets_links %}
            <tr>
                <td>{{ assets_link.id }}</td>
                <td>{{ assets_link.name }}</td>
                <td>{{ assets_link.link }}</td>
                <td>
                    <a href="{{ path('app_assets_links_show', {'id': assets_link.id}) }}">show</a>
                    <a href="{{ path('app_assets_links_edit', {'id': assets_link.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_assets_links_new') }}">Create new</a>
{% endblock %}
